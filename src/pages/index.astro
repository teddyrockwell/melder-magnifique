  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Join newsletter',
        href: '#',
        icon: 'tabler:mail',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/success-unsplash.jpeg',
      alt: 'Man with outstretched arms facing sunset',
    }}
  >
    <Fragment slot='title'>
      <span class='text-accent dark:text-blue-600 highlight tracking-normal'>Melder Magnifique</span>
      <span class='hidden sm:block sm:mb-8'>Unlock your true potential</span>
    </Fragment>

    <Fragment slot='subtitle'>
      <span class='leading-9 tracking-normal'>
        We empower you with content and resources designed to elevate your <a href='/' class='hp-anchor'>mind</a>, <a
          href='/'
          class='hp-anchor'>body</a
        >, and <a href='/' class='hp-anchor'>spirit</a>. Dive into expert <a href='/' class='hp-anchor'>wisdom</a>,
        optimize your <a href='/' class='hp-anchor'>health</a>, and build lasting <a href='/' class='hp-anchor'
          >wealth</a
        >.
      </span>
