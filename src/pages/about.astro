  <!-- Testimonials Widget *********** -->

  <Testimonials
    id='testimony'
    title='Client testimonials'
    subtitle=`Here's what clients have to say:`
    testimonials={[
      {
        testimonial: `He took our vague concept and turned it into a visual masterpiece that perfectly aligned with our goals. His attention to detail and ability to translate ideas into compelling visuals exceeded our expectations.`,
        name: 'Mark Thompson',
        job: 'Digital Lead',
        image: {
          src: 'https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
