---
// Import necessary utilities and types
import { getStaticTags } from '~/utils/blog';

const tags = await getStaticTags();
---

<div class='border-2 border-gray-500 dark:border-slate-300 rounded-md'>
  <div class='mb-4 p-1 text-lg text-center'>Tags</div>
  <ul class='overflow-y-auto max-h-48' id='tag-list'>
    {
      tags.map((tag) => (
        <li class='flex justify-between p-2 hover:bg-gray-100 dark:hover:bg-accent'>
          <a href={`/tag/${tag.slug}/`} class='flex-grow'>
            {tag.title}
          </a>
          <span class='text-muted dark:text-slate-300'>({tag.count})</span>
        </li>
      ))
    }
  </ul>
</div>
<style>
  /* Custom scrollbar styles */
  #tag-list::-webkit-scrollbar {
    width: 8px;
  }

  #tag-list::-webkit-scrollbar-track {
    background: transparent;
  }

  #tag-list::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 4px;
  }

  #tag-list::-webkit-scrollbar-thumb:hover {
    background: #555;
  }

  /* Firefox scrollbar styles */
  #tag-list {
    scrollbar-width: thin;
    scrollbar-color: #888 transparent;
  }
</style>
